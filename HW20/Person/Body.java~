public class Body{
    public String body;
    

    public Body(){
	int i=(int)(Math.random()*3);
	if (i==0){
	    body="  |\n--|--\n / \\ \n/   \\ ";
	}
	if (i==1){
	    body="  |\n==|==\n / \\ \n/   \\ ";
	}
	if (i==2){
	    body="  |\n++|++\n / \\ \n/   \\ ";
	}
    }


}
